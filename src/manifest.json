{
  "name": "Polimi Webex Downloader",
  "description": "Download Politecnico di Milano lessons from Cisco Webex.",
  "version": "0.1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://politecnicomilano.webex.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "webRequest", "downloads", "storage"],
  "host_permissions": [
    "https://politecnicomilano.webex.com/*",
    "https://github.com/lorossi/polimi-webex-downloader/releases/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/download.png"],
      "matches": ["https://politecnicomilano.webex.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
